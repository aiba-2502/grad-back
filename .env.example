################################################################################
# 心のログ バックエンド環境変数設定ファイル
# Backend Environment Variables for Kokoro Log
################################################################################

#===============================================================================
# Rails設定 / Rails Configuration
#===============================================================================

# Rails環境 (development, test, production)
RAILS_ENV=development

# Rails秘密鍵（本番環境で必須）
# 生成コマンド: docker run --rm backend-production bundle exec rails secret
# SECRET_KEY_BASE=

# 最大スレッド数
RAILS_MAX_THREADS=5

#===============================================================================
# データベース設定 / Database Configuration
#===============================================================================

# PostgreSQL接続設定
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=kokoro_log_development

# 本番環境用データベースパスワード
# BACKEND_DATABASE_PASSWORD=

# データベースURL（代替設定方法）
# DATABASE_URL=postgres://user:password@host:port/database

#===============================================================================
# JWT認証設定 / JWT Authentication
#===============================================================================

# JWT署名用秘密鍵（必須）
# 生成コマンド: make generate-env-with-key
JWT_SECRET_KEY=

#===============================================================================
# AI APIキー / AI API Keys
#===============================================================================

# OpenAI API Key
# https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key  
# https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Google Gemini API Key
# https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

#===============================================================================
# 音声読み上げ設定 / Voice Settings
#===============================================================================

# にじボイスAPIキー
NIJIVOICE_API_KEY=

# にじボイスボイスID
NIJIVOICE_VOICE_ID=

# にじボイス再生速度（0.5〜2.0）
NIJIVOICE_SPEED=1.0

#===============================================================================
# AI設定 / AI Configuration (Optional)
#===============================================================================

# デフォルトAIサービス (openai, anthropic, google)
# SELECT_AI_SERVICE=openai

# デフォルトAIモデル
# SELECT_AI_MODEL=gpt-4o-mini

# 温度パラメータ (0.0-2.0)
# TEMPERATURE=0.7

# 最大トークン数
# MAX_TOKENS=1000

#===============================================================================
# CORS設定 / CORS Configuration
#===============================================================================

# 許可するオリジン（カンマ区切り）
# CORS_ORIGINS=http://localhost:3001,http://localhost:3000

#===============================================================================
# ログ設定 / Logging Configuration
#===============================================================================

# ログレベル (debug, info, warn, error, fatal, unknown)
# LOG_LEVEL=debug

# ログ出力先
# LOG_OUTPUT=stdout

#===============================================================================
# その他の設定 / Other Settings
#===============================================================================

# タイムゾーン
# TZ=Asia/Tokyo

# ホスト名（本番環境用）
# RAILS_HOST=your-domain.com

# アセット配信用CDN URL
# ASSET_HOST=

# ActionMailer設定（メール送信用）
# SMTP_ADDRESS=
# SMTP_PORT=
# SMTP_USER_NAME=
# SMTP_PASSWORD=
# SMTP_DOMAIN=

#===============================================================================
# 開発環境用設定 / Development Settings
#===============================================================================

# デバッグモード
# DEBUG=true

# プロファイラー有効化
# ENABLE_PROFILER=false

# SQLログ出力
# VERBOSE_QUERY_LOGS=false

#===============================================================================
# 注意事項 / Notes
#===============================================================================
# 
# 1. JWT_SECRET_KEYは必ず設定してください
#    生成コマンド: make generate-env-with-key
# 
# 2. 本番環境では以下を必ず設定してください:
#    - RAILS_ENV=production
#    - SECRET_KEY_BASE（必須）
#    - BACKEND_DATABASE_PASSWORD
#    - 適切なCORS_ORIGINS
# 
# 3. AIサービスを使用する場合は、該当するAPIキーを設定してください
# 
# 4. このファイルを.envにコピーして使用してください:
#    cp .env.example .env
#
################################################################################